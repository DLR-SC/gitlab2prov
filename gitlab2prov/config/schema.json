{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "items": {
        "oneOf": [
            {
                "$ref": "#/definitions/extract"
            },
            {
                "$ref": "#/definitions/read"
            },
            {
                "$ref": "#/definitions/combine"
            },
            {
                "$ref": "#/definitions/write"
            },
            {
                "$ref": "#/definitions/stats"
            },
            {
                "$ref": "#/definitions/transform"
            }
        ]
    },
    "definitions": {
        "extract": {
            "type": "object",
            "properties": {
                "extract": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "array",
                            "items": {
                                "format": "uri",
                                "type": "string"
                            }
                        },
                        "token": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "url",
                        "token"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "extract"
            ]
        },
        "read": {
            "type": "object",
            "properties": {
                "read": {
                    "type": "object",
                    "properties": {
                        "input": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "input"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "read"
            ]
        },
        "combine": {
            "type": "object",
            "properties": {
                "combine": {
                    "type": "null"
                }
            },
            "additionalProperties": false,
            "required": [
                "combine"
            ]
        },
        "write": {
            "type": "object",
            "properties": {
                "write": {
                    "type": "object",
                    "properties": {
                        "output": {
                            "type": "string"
                        },
                        "format": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "json",
                                    "rdf",
                                    "provn",
                                    "dot",
                                    "xml"
                                ]
                            }
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "output",
                        "format"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "write"
            ]
        },
        "stats": {
            "type": "object",
            "properties": {
                "stats": {
                    "type": "object",
                    "properties": {
                        "explain": {
                            "type": "boolean"
                        },
                        "fine": {
                            "type": "boolean"
                        },
                        "coarse": {
                            "type": "boolean"
                        },
                        "formatter": {
                            "type": "string",
                            "enum": [
                                "table",
                                "csv"
                            ]
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "required": [
                "stats"
            ]
        },
        "transform": {
            "type": "object",
            "properties": {
                "transform": {
                    "type": "object",
                    "properties": {
                        "use_pseudonyms": {
                            "type": "boolean"
                        },
                        "remove_duplicates": {
                            "type": "boolean"
                        },
                        "merge_aliased_agents": {
                            "type": "boolean"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "required": [
                "transform"
            ]
        }
    }
}